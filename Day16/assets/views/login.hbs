<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="/assets/CSS/nav.css" rel="stylesheet" />
  </head>
  <body>
    {{! navbar }}
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand icon .thumbnail" href="/">
          <img src="/assets/img/brandred.png" style="width: 50px" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item"><a
                class="nav-link active"
                href="/"
              >Home</a></li>
            {{#if isLogin}}
              <li class="nav-item"><a class="nav-link" href="/add-project">Add
                  Project</a></li>
            {{/if}}
            <li class="nav-item"><a
                class="nav-link"
                href="/testimonial"
              >Testimonial</a></li>
          </ul>

          {{#if isLogin}}
            <div class="card" style="margin:10px">
              <div class="card-body" style="margin:-9px">
                Hi ,{{users.username}}
              </div>
            </div>

            <a href="/logout">
              <button
                type="button"
                class="btn btn-outline-secondary"
                style="margin-right:10px"
              >Log Out</button>
            </a>
          {{else}}
            <a href="/login">
              <button
                type="button"
                class="btn btn-outline-secondary"
                style="margin-right:10px"
              >Login</button>
            </a>
            <a href="/register">
              <button
                type="button"
                class="btn btn-outline-secondary"
                style="margin-right:10px"
              >Register</button>
            </a>
          {{/if}}
          <a href="/contact">
            <button type="button" class="btn btn-outline-secondary">Contact me</button>
          </a>
        </div>
      </div>
    </nav>
    {{! Body }}
    <div class="container-fluid w-50 my-5">
      <H1 class="text-center">LOGIN</H1>
      {{#if messages.danger}}
        <div class="alert alert-danger" role="alert">
          <div class="container">
            {{messages.danger}}
          </div>
        </div>
      {{/if}}
      <div class="card p-5" style="margin-top:50px">
        <form method="post" action="/login">
          <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input
              type="email"
              class="form-control"
              id="email"
              aria-describedby="emailHelp"
              name="email"
            />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
            />
          </div>
          <button type="submit" class="btn btn-primary">Login</button>
        </form>
      </div>
    </div>

  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  ></script>
</html>