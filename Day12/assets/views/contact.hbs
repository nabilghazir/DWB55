<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Project</title>
    <link rel="stylesheet" href="./assets/css/nav.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- Nav -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand icon .thumbnail" href="/"><img
            src="./assets/img/brandred.png"
            style="width: 50px"
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/add-project">Add Project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/testimonial">Testimonial</a>
            </li>
          </ul>
          <a href="/contact">
            <button type="button" class="btn btn-outline-secondary">
              Contact me
            </button>
          </a>
        </div>
      </div>
    </nav>
    <!-- Body -->
    <div>
      <div>
        <div class="container-sm my-5">
          <h1 class="row my-custom-row justify-content-center">GET IN TOUCH</h1>
          <form class="d-flex p-5 row justify-content-center">
            <div class="col-md-8">
              <div class="form-floating mb-3">
                <input
                  type="text"
                  class="form-control"
                  id="inputName"
                  placeholder="Name"
                />
                <label for="inputName" style="margin-left: 10px">Name</label>
              </div>

              <div class="form-floating mb-3">
                <input
                  type="email"
                  class="form-control"
                  id="inputEmail"
                  placeholder="Email"
                />
                <label for="inputEmail" style="margin-left: 10px">Email address</label>
              </div>

              <div class="form-floating mb-3">
                <input
                  type="tel"
                  class="form-control"
                  id="inputPhone"
                  placeholder="Telephone"
                />
                <label
                  for="inputPhone"
                  style="margin-left: 10px"
                >Telephone</label>
              </div>

              <div class="form-floating mb-3">
                <select
                  class="form-select"
                  id="inputSubject"
                  aria-label="Floating label select example"
                >
                  <option value="1" style="display: none"></option>
                  <option value="2">Frontend Developer</option>
                  <option value="3">Backend Developer</option>
                  <option value="4">Fullstack Developer</option>
                </select>
                <label
                  for="inputSubject"
                  class="font"
                  style="margin-left: 10px"
                >Subject</label>
              </div>
              <div class="form-floating mb-3">
                <textarea
                  class="form-control"
                  placeholder="Your Message"
                  id="inputText"
                  style="height: 100px; resize: none"
                ></textarea>
                <label
                  for="inputText"
                  class="font"
                  style="margin-left: 10px"
                >Your Message</label>
              </div>
            </div>

            <button
              type="submit"
              class="btn btn-secondary col-md-1 offset-md-6"
              onclick="submitData(event)"
            >
              Submit
            </button>
          </form>
        </div>
      </div>
    </div>
    <script src="./assets/js/form.js"></script>
    <script src="./assets/js/nav.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>